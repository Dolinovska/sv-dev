<div class="modal fade" id="streetEditModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Редагувати</h4>
            </div>
            <div class="modal-body">
                <form action="@Url.Action("Edit", "Street")" method="post" id="editForm">
                    <input type="hidden" id="EditId" />
                    <input type="hidden" id="CityId" />
                    <div class="form-horizontal">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-md-2" for="EditName">Назва</label>
                                <div class="col-md-10">
                                    <input class="form-control" id="EditName" name="Name" type="text" value="">
                                    <span class="field-validation-valid text-danger" data-valmsg-for="EditName" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" for="EditName">Псевдонім</label>
                                <div class="col-md-10">
                                    <input class="form-control" id="EditPseudonym" name="Pseudonym" type="text" value="">
                                    <span class="field-validation-valid text-danger" data-valmsg-for="EditPseudonym" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Відміна</button>
                        <button type="button" class="btn btn-primary" id="submitStreetEdit">Редагувати</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    $("#submitStreetEdit").click(function () {

        var streetName = $('#EditName').val();
        var streetPseudonym = $('#EditPseudonym').val();
        //var streetName = $('#EditName').val();
        var id = $('#EditId').val();
        var cityId = $('#CityId').val();
        $('#streetEditModal').modal();
        var data = {
            Id: id,
            Name: streetName,
            Pseudonym: streetPseudonym,
            CityId: cityId
        };
        $.post('@Url.Action("Edit","Street")', data)
            .done((data) => {
                if (data.status === "success") {
                    window.location.href = "@Url.Action("Details","City")" + "?id=" + cityId;
                }
            });
    })
</script>
