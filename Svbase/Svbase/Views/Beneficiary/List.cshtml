@using Svbase.Core.Models
@model IEnumerable<Svbase.Core.Models.BeneficiaryCreateModel>
<div class="container body-content margin-top">
    <div class="row">
        <div class="col-sm-12">
            <div class="row">
                <div class="col-md-8 col-xs-12">
                    <h2 style="margin-top: 0">Категорії</h2>
                </div>
                <div class="col-md-4 col-xs-12">
                    <a class="btn btn-primary pull-right"
                       data-toggle="modal"
                       data-target="#beneficiaryCreateModal">
                       Додати категорію
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-xs-12">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th class="border-bottom-none">
                                    <span>Назва</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var beneficiary in Model)
                            {
                                <tr data-id="@beneficiary.Id">
                                    <td class="col-xs-12">
                                        <a>@beneficiary.Name</a>
                                        @if (beneficiary.CanDelete)
                                        {
                                            <i style="color: red; cursor: pointer"
                                               class="pull-right glyphicon glyphicon-trash"
                                               data-action="delete"
                                               data-item-id="@beneficiary.Id"></i>
                                        }
                                        <i style="color: gray; margin-right: 5px; cursor: pointer"
                                           class="pull-right glyphicon glyphicon-pencil"
                                           data-action="edit"
                                           data-item-id="@beneficiary.Id"></i>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_BeneficiaryCreate", new BeneficiaryCreateModel())
@Html.Partial("_BeneficiaryEdit")
@Html.Partial("_ConfirmDelete")

<script>
    $('[data-action="edit"]').click(function () {
        var item = $(this).parent().find("a")[0].text;
        var id = $(this).data('itemId');
        $('#EditName').val(item);
        $('#EditId').val(id);
        $('#itemEditModal').modal();
    });

    $('[data-action="delete"]').click(function () {
        var id = $(this).data('item-id');
        $('#confirmDeleteModal').modal('show');
        $('#confirmDeleteModal')
            .find("#submitDelete")
            .data("item-id", id);
    });

    $("#submitDelete").click(function () {
        var id = $(this).data('item-id');
        $.get('@Url.Action("Delete", "Beneficiary")', { id })
            {
                var item = $(".table-striped > tbody").find("[data-id=" + id + "]");
                 $(item).remove();
            };

        $('#confirmDeleteModal').modal('hide');

    });
</script>
