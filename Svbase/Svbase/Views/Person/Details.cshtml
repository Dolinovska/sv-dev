@model Svbase.Core.Models.PersonViewModel
<div class="container body-content margin-top">
    <div class="row">
        <div class="col-sm-12 ignore-padding">
            <div class="col-md-6 col-xs-12">
                <h2 style="margin-top: 0">Детальна інформація</h2>
            </div>
            <div class="col-md-6 col-xs-12">
                <a class="btn btn-primary pull-right"
                   data-action="edit"
                   data-item-id="@Model.Id">
                    Редагувати
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body table-horizontal-scroll">
                    <table class="table table-striped table-bordered table-hover"
                           id="dataTables-example">
                        <thead>
                            <tr>
                                @if (Model.LastName != null)
                                {
                                    <td id="lastNameHidden">Прізвище</td>
                                }
                                @if (Model.FirstName != null)
                                {
                                    <td>Ім'я</td>
                                }
                                @if (Model.MiddleName != null)
                                {
                                    <td>По батькові</td>
                                }
                                @*@if (Model.Cities != null)
                                {
                                    <td>Місто</td>
                                }
                                @if (Model.Streets != null)
                                {
                                    <td>Вулиця</td>
                                }*@
                                @if (Model.FlatId != null)
                                {
                                    <tD>Будинок</tD>
                                    <td>Квартира</td>
                                }
                                @if (Model.FirthtMobilePhone != null)
                                {
                                    <td>Моб. тел. 1</td>
                                }
                                @if (Model.SecondMobilePhone != null)
                                {
                                    <td>Моб. тел. 2</td>
                                }
                                @if (Model.HomePhone != null)
                                {
                                    <td>Дом. тел.</td>
                                }
                                @if (Model.Beneficiaries != null)
                                {
                                    <td>Категорія</td>
                                }
                                @if (Model.Email != null)
                                {
                                    <td>Емейл</td>
                                }
                                @if (Model.DateBirth != null)
                                {
                                    <tD>Дата<br> народження</tD>
                                }
                            </tr>
                        </thead>
                        <tbody id="selectionBody">
                            <tr class="odd gradeX">
                                @if (Model.LastName != null)
                                {
                                    <th id="lastNameHidd-@Model.Id">@Model.LastName</th>
                                }
                                @if (Model.LastName != null)
                                {
                                    <th>@Model.FirstName</th>
                                }
                                @if (Model.MiddleName != null)
                                {
                                    <th>@Model.MiddleName</th>
                                }
                                @*@if (Model.Cities != null)
                                {
                                    <th>Івано-Франківськ</th>
                                }
                                @if (Model.Streets != null)
                                {
                                    <th>Вулиця</th>
                                }*@
                                @if (Model.FlatId != null)
                                {
                                    <th>Будинок</th>
                                    <th>Квартира</th>
                                }
                                @if (Model.FirthtMobilePhone != null)
                                {
                                    <th>@Model.FirthtMobilePhone</th>
                                }
                                @if (Model.SecondMobilePhone != null)
                                {
                                    <th>@Model.SecondMobilePhone</th>
                                }
                                @if (Model.HomePhone != null)
                                {
                                    <th>@Model.HomePhone</th>
                                }
                                @if (Model.Beneficiaries != null)
                                {
                                    <th>
                                        @foreach (var item in Model.Beneficiaries)
                                        {
                                            @($"{item.Name} ")
                                        }
                                    </th>
                                }
                                @if (Model.Email != null)
                                {
                                    <th>@Model.Email</th>
                                }
                                @if (Model.DateBirth != null)
                                {
                                    <th>@Model.DateBirth</th>
                                }

                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@*@Html.Partial("_PersonEdit", Model)*@
<script>
    $('[data-action="edit"]').click(function () {
        var id = $(this).data('itemId');
        $('#EditId').val(id);
        $('#personEditModal').modal();
    });
</script>
