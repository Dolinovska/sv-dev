                                        <td>@person.FirthtMobilePhone</td>
                                        <td>@person.SecondMobilePhone</td>
                                        <td>@person.HomePhone</td>
                                        <td>@person.Position</td>
                                        <td>@person.PartionType</td>
                                        <td>@person.DateBirth</td>
                                    </tr>
                                }
                            </tbody>
