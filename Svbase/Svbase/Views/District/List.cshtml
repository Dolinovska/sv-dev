@using Svbase.Core.Enums
@model IEnumerable<Svbase.Core.Models.DistrictListModel>

<div class="container body-content margin-top">
    <div class="row">
        <div class="col-sm-12">
            <div class="row">
                <div class="col-xs-8">
                    <h2 style="margin-top: 0">Districts</h2>
                </div>
                <div class="col-xs-4">
                    <a class="btn btn-primary pull-right" href="@Url.Action("Create")">
                        Add District
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-xs-12">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th class="col-xs-6">
                                    <span>Name</span>
                                </th>
                                <th class="col-xs-6">
                                    <span>Districe Type</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var district in Model)
                            {
                                <tr>
                                    <td class="col-xs-6">
                                        <a href="@Url.Action("Details", new {id = district.Id})">@district.Name</a>
                                    </td>
                                    <td class="col-xs-6">
                                        @if (district.DistrictType == DistrictType.Сonstituency)
                                        {
                                            <span>Constituency</span>
                                        }
                                        @if (district.DistrictType == DistrictType.Custom)
                                        {
                                            <span>Custom</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>