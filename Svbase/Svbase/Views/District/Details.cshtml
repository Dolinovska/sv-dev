@model Svbase.Core.Models.DistrictCreateModel
<div class="container body-content margin-top">

    @using (Html.BeginForm("Edit", "District"))
    {
        @Html.HiddenFor(model => model.Id)
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-xs-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <span>Вибрані вулиці</span>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-12">

                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th class="col-xs-4">
                                            <span>Назва</span>
                                        </th>
                                        <th class="col-xs-12">
                                            <span>Місто</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var street in Model.Streets.Where(x => x.IsChecked))
                                    {
                                        <tr>
                                            <td class="col-xs-4">
                                                <a href="@Url.Action("Details","Street", new {id = street.Id})">@street.Name</a>
                                            </td>
                                            <td class="col-xs-12">
                                                <span>@street.CityName</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6">
                            <span>Вулиці</span>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-12">
                            @for (var i = 0; i < Model.Streets.Count(); i++)
                            {
                                <div class="form-group">
                                    <div class="control-label col-xs-2">@($"{Model.Streets[i].Name} ({Model.Streets[i].CityName})")</div>
                                    <div class="col-md-10">
                                        <div class="checkbox">
                                            @Html.HiddenFor(model => model.Streets[i].Id)
                                            @Html.EditorFor(model => Model.Streets[i].IsChecked)
                                            @Html.ValidationMessageFor(model => Model.Streets[i].IsChecked, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <button class="btn btn-primary pull-right" type="submit">Зберегти</button>
                    <a class="pull-right" style="padding: 7px 12px;" href="@Url.Action("List")">Відміна</a>
                </div>
            </div>
        </div>
    }
</div>