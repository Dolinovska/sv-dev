@using Svbase.Core.Models
@model IEnumerable<CityCreateModel>
<div class="container body-content margin-top">
    <div class="row">
        <div class="col-sm-12">
            <div class="row">
                <div class="col-xs-8">
                    <h2 style="margin-top: 0">Міста</h2>
                </div>
                <div class="col-xs-4">
                    <a href="@Url.Action("List", "City")>Міста </a>
                    <a  href="@Url.Action("List", "St")>Вулиці </a>
                   
                    <a class="btn btn-primary pull-right"
                       data-toggle="modal"
                       data-target="#cityCreateModal">
                        Додати місто
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-xs-12">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>
                                    <span>Назва</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model == null || !Model.Any())
                            {
                                <tr>
                                    <td class="col-xs-12">
                                        <a class="btn btn-primary pull-right"
                                           data-toggle="modal"
                                           data-target="#cityCreateModal">
                                            У Вас ще немає міста створіть місто
                                        </a>
                                    </td>
                                </tr>

                            }
                            @foreach (var city in Model)
                            {
                                <tr>
                                    <td class="col-xs-12">
                                        <a href="@Url.Action("Details", new {id = city.Id})">@city.Name</a>
                                        @if (city.CanDelete)
                                        {
                                            <i style="color: red; cursor: pointer"
                                               class="pull-right glyphicon glyphicon-trash"
                                               data-action="delete"
                                               data-item-id="@city.Id"></i>
                                        }
                                        <i style="color: gray; margin-right: 5px; cursor: pointer"
                                           class="pull-right glyphicon glyphicon-pencil"
                                           data-action="edit"
                                           data-item-id="@city.Id"></i>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_CityCreate", new CityCreateModel())
@Html.Partial("_CityEdit")


<script>
    $('[data-action="edit"]').click(function () {
        var city = $(this).parent().find("a")[0].text;
        var id = $(this).data('itemId');
        $('#EditName').val(city);
        $('#EditId').val(id);
        $('#cityEditModal').modal();
    });

    $('[data-action="delete"]').click(function () {
        var that = this;
        var id = $(this).data('itemId');
        $.get('@Url.Action("Delete")', { id })
            .done(() => {
                $(that).parent().parent().remove();
            });
    });
</script>
