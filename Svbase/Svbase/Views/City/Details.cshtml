@using Svbase.Core.Models
@model CityViewModel
<div class="container body-content margin-top">
    <div class="row">
        <div class="col-sm-12">
            <h2 style="margin-top: 0">@Model.Name</h2>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-6">
                    <span>Вулиці</span>
                </div>
                <div class="col-xs-6">
                    <button class="btn btn-primary btn-xs pull-right"
                            data-toggle="modal"
                            data-target="#streetCreateModal">
                        Додати вулицю
                    </button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-xs-12">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>
                                    <span>Name</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var street in Model.Streets)
                            {
                                <tr>
                                    <td class="col-xs-12">
                                        <a href="@Url.Action("Details","Street", new {id = street .Id})">@street.Name</a>
                                        @if (street.CanDelete)
                                        {
                                            <i style="color: red; cursor: pointer"
                                               class="pull-right glyphicon glyphicon-trash"
                                               data-action="delete"
                                               data-item-id="@street.Id"></i>
                                        }
                                        <i style="color: gray; margin-right: 5px; cursor: pointer"
                                           class="pull-right glyphicon glyphicon-pencil"
                                           data-action="edit"
                                           data-item-id="@street.Id"></i>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

    @Html.Partial("_StreetCreatePartial", new StreetCreateModel { CityId = Model.Id })
    @Html.Partial("_StreetEdit")

    <script>
    $('[data-action="edit"]').click(function () {
        var street = $(this).parent().find("a")[0].text;
        var id = $(this).data('itemId');
        $('#EditName').val(street);
        $('#EditId').val(id);
        $('#streetEditModal').modal();
    });

    $('[data-action="delete"]').click(function () {
        var that = this;
        var id = $(this).data('itemId');
        $.get('@Url.Action("Delete","Street")', { id })
            .done(() => {
                $(that).parent().parent().remove();
            });
    });
    </script>

