@using Svbase.Core.Models
@model Svbase.Core.Models.ApartmentViewModel
<div class="container body-content margin-top">
    <div class="row">
        <div class="col-sm-12">
            <div class="col-md-6 col-xs-12">
                <h2 style="margin-top: 0">@Model.Name</h2>
            </div>
            <div class="col-md-6 col-xs-12">
                <a href="@Url.Action("Details", "Street", new {id = Model.StreetId})" class="pull-right padding-top-10">
                    Назад
                </a>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-6">
                    <span>Квартири</span>
                </div>
                <div class="col-xs-6">
                    <button class="btn btn-primary btn-xs pull-right"
                            data-toggle="modal"
                            data-target="#flatCreateModal">
                       Додати квартиру
                    </button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-xs-12">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>
                                    <span>Назва</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var flat in Model.Flats)
                            {
                                <tr>
                                    <td class="col-xs-12">
                                        <a href="@Url.Action("Details","Flat", new {id = flat.Id})">@flat.Name</a>
                                        @if (flat.CanDelete)
                                        {
                                            <i style="color: red; cursor: pointer"
                                               class="pull-right glyphicon glyphicon-trash"
                                               data-action="delete"
                                               data-item-id="@flat.Id"></i>
                                        }
                                        <i style="color: gray; margin-right: 5px; cursor: pointer"
                                           class="pull-right glyphicon glyphicon-pencil"
                                           data-action="edit"
                                           data-item-id="@flat.Id"
                                           data-apartment-id="@Model.Id"></i>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_FlatCreate", new FlatCreateModel { ApartmentId = Model.Id });
@Html.Partial("_FlatEdit");

<script>
    $('[data-action="edit"]').click(function () {
        var flat = $(this).parent().find("a")[0].text;
        var id = $(this).data('itemId');
        var apartmentId = $(this).data('apartmentId');
        $('#EditName').val(flat);
        $('#EditId').val(id);
        $('#ApartmentId').val(apartmentId);
        $('#flatEditModal').modal();
    });

    $('[data-action="delete"]').click(function () {
        var that = this;
        var id = $(this).data('itemId');
        $.get('@Url.Action("Delete","Flat")', { id })
            .done(() => {
                $(that).parent().parent().remove();
            });
    });
</script>
